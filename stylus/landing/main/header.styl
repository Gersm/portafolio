// VARIABLES
$Person__ancho = 150

// BLOQUE DE ENCABEZADO
.Header
   // background darken($light-orange,3%)
   degradado(darken($light-orange,5%),5%)
   flexbox(column)
   height 50%
   &,&>*
      margin 0
      padding 0

// sub bloque de navegacion - NAV
.Header__navegation
   width 100%
   .Dropdown
      flexbox(column)
      posicion(absolute, $esp-sep, $esp-sep)
   .List
      background $color1
      position relative
      text-align center
      lista()
      padin(1rem,null,1rem)
      // flexbox(column,center,stretch)
      display none
      .Btnx
         posicion(absolute,0.5rem,0.5rem)
   .List__menu
      border-bottom 1px solid $color2
   .List__element
      display block
      &:hover
         background rgba(white,0.2)
   .List__link
      color $color2
      padin(1rem,null,1rem)

// sub bloque de datos personales - DIV
.Header__data
   color $color2
   .List
      flexbox(column)
      texto(primera)
      lista()


// bloque de persona
.Person
   height unit($Person__ancho,"px")
   overflow hidden
   width unit($Person__ancho,"px")

.Person__avatar
   border 4px solid white
   border-radius 50%
   box-sizing border-box
   height 100%
   width 100%
